{
  "name": "db",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/backend/db/src",
  "projectType": "library",
  "tags": ["backend", "shared"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/backend/db",
        "main": "libs/backend/db/src/index.ts",
        "tsConfig": "libs/backend/db/tsconfig.lib.json",
        "assets": ["libs/backend/db/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/backend/db/jest.config.cts"
      }
    }
  }
}
