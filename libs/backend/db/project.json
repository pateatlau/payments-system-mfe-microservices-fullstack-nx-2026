{
  "name": "db",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/backend/db/src",
  "projectType": "library",
  "tags": ["scope:backend", "type:lib"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/backend/db",
        "tsConfig": "libs/backend/db/tsconfig.lib.json",
        "packageJson": "libs/backend/db/package.json",
        "main": "libs/backend/db/src/index.ts",
        "assets": ["libs/backend/db/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/backend/db/jest.config.ts",
        "passWithNoTests": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/backend/db/**/*.ts"]
      }
    }
  }
}
