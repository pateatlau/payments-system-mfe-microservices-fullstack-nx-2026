# POC-3 Required Environment Variables
# This file lists all REQUIRED environment variables (without values)
# Use this file for validation or as a checklist when setting up a new environment
#
# Copy .env.example to .env and fill in all required values

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES (NX_ prefix required for Nx)
# ============================================================================

# API Configuration (REQUIRED)
NX_API_BASE_URL=
NX_ENV=

# Sentry (Frontend - REQUIRED)
NX_SENTRY_DSN=
NX_SENTRY_RELEASE=
NX_APP_VERSION=

# MFE Remote URLs (REQUIRED)
NX_AUTH_MFE_URL=
NX_PAYMENTS_MFE_URL=
NX_ADMIN_MFE_URL=

# WebSocket Configuration (POC-3 - REQUIRED)
WS_URL=

# Feature Flags (OPTIONAL - have defaults)
# NX_ENABLE_DEV_TOOLS=
# NX_ENABLE_EVENT_LOGGING=
# NX_ENABLE_API_LOGGING=

# ============================================================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================================================

# Node Environment (REQUIRED)
NODE_ENV=
LOG_LEVEL=

# Service Ports (OPTIONAL - have defaults)
# API_GATEWAY_PORT=
# AUTH_SERVICE_PORT=
# PAYMENTS_SERVICE_PORT=
# ADMIN_SERVICE_PORT=
# PROFILE_SERVICE_PORT=

# Database (PostgreSQL) - POC-3: Separate Databases per Service (REQUIRED)
# =========================================================================
AUTH_DATABASE_URL=
PAYMENTS_DATABASE_URL=
ADMIN_DATABASE_URL=
PROFILE_DATABASE_URL=

# Legacy Database (POC-2 compatibility - OPTIONAL during migration)
# DATABASE_URL=

# Database Connection Pool Settings (OPTIONAL - have defaults)
# DATABASE_POOL_MIN=
# DATABASE_POOL_MAX=

# JWT Authentication (REQUIRED)
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_TOKEN_EXPIRY=
JWT_REFRESH_TOKEN_EXPIRY=

# Redis (Caching Only - POC-3) (REQUIRED)
# ========================================
# Note: Event hub migrated to RabbitMQ in POC-3
REDIS_URL=
# REDIS_PASSWORD=  (OPTIONAL)

# RabbitMQ (Event Hub - POC-3) (REQUIRED)
# ========================================
# RabbitMQ replaces Redis Pub/Sub for event hub in POC-3
RABBITMQ_URL=
RABBITMQ_USER=
RABBITMQ_PASSWORD=

# nginx Configuration (POC-3) (OPTIONAL - for production)
# =======================================================
# NGINX_HOST=
# SSL_CERT_PATH=
# SSL_KEY_PATH=

# Observability - Sentry (POC-3) (OPTIONAL)
# ==========================================
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=
# SENTRY_TRACES_SAMPLE_RATE=

# CORS (REQUIRED)
CORS_ORIGINS=
