{
  "name": "auth-mfe",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/auth-mfe/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project auth-mfe --web",
  "targets": {
    "build": {
      "executor": "@nx/rspack:rspack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "web",
        "outputPath": "dist/apps/auth-mfe",
        "main": "apps/auth-mfe/src/main.tsx",
        "tsConfig": "apps/auth-mfe/tsconfig.app.json",
        "index": "apps/auth-mfe/index.html",
        "isolatedConfig": true,
        "rspackConfig": "apps/auth-mfe/rspack.config.js"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/rspack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "auth-mfe:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "auth-mfe:build:development"
        },
        "production": {
          "buildTarget": "auth-mfe:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/auth-mfe/jest.config.js",
        "passWithNoTests": true
      },
      "// TODO": "Remove passWithNoTests once Jest test discovery issue is resolved. Test files exist in src/**/*.{spec,test}.{ts,tsx} but Jest --listTests finds nothing. Track in issue to investigate rootDir, testMatch patterns, and module resolution."
    }
  }
}
