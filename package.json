    "@nx/node": "^22.1.3",
    "@nx/playwright": "22.1.3",
    "@nx/react": "^22.1.3",
    "@nx/rspack": "^22.1.3",
    "@nx/web": "22.1.3",
    "@playwright/test": "^1.36.0",
    "@rollup/plugin-alias": "^6.0.0",
    "@rspack/core": "^1.6.6",
    "@rspack/dev-server": "^1.1.4",
    "@rspack/plugin-react-refresh": "^1.5.3",
    "@swc-node/register": "~1.9.1",
