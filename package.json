{
  "name": "payments-system-mfe",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "nx": "./nx",
    "dev": "pnpm build:remotes && pnpm preview:all",
    "dev:all": "pnpm build:remotes && pnpm preview:all",
    "dev:shell": "nx serve shell",
    "dev:auth-mfe": "nx serve auth-mfe",
    "dev:payments-mfe": "nx serve payments-mfe",
    "dev:mf": "nx run-many --target=serve --projects=shell,auth-mfe,payments-mfe --parallel",
    "dev:mf:shell": "nx serve shell",
    "dev:mf:remotes": "nx run-many --target=serve --projects=auth-mfe,payments-mfe --parallel",
    "build": "nx run-many --target=build --all",
    "build:shell": "nx build shell",
    "build:auth-mfe": "nx build auth-mfe",
    "build:payments-mfe": "nx build payments-mfe",
    "build:remotes": "nx run-many --target=build --projects=auth-mfe,payments-mfe --parallel",
    "build:affected": "nx affected --target=build",
    "build:verify": "pnpm build:remotes && pnpm build:shell && echo '✅ All builds successful'",
    "build:verify:remotes": "pnpm build:remotes && ls -la dist/apps/auth-mfe/remoteEntry.js dist/apps/payments-mfe/remoteEntry.js && echo '✅ Remote entry files exist'",
    "preview": "nx run-many --target=preview --projects=shell,auth-mfe,payments-mfe --parallel",
    "preview:all": "nx run-many --target=preview --projects=shell,auth-mfe,payments-mfe --parallel",
    "preview:shell": "nx preview shell",
    "preview:auth-mfe": "nx preview auth-mfe",
    "preview:payments-mfe": "nx preview payments-mfe",
    "preview:remotes": "nx run-many --target=preview --projects=auth-mfe,payments-mfe --parallel",
    "kill:all": "(lsof -i :4200 -i :4201 -i :4202 -t 2>/dev/null | xargs kill -9 2>/dev/null || true) && (pkill -f 'nx.*serve' 2>/dev/null || true) && echo '✅ All dev servers killed' || echo 'No servers running'",
    "kill:shell": "(lsof -ti :4200 2>/dev/null | xargs kill -9 2>/dev/null || true) && (pkill -f 'vite.*preview.*4200' 2>/dev/null || true) && (pkill -f 'rspack.*4200' 2>/dev/null || true) && echo '✅ Shell server killed' || echo 'No shell server running'",
    "kill:auth-mfe": "(lsof -ti :4201 2>/dev/null | xargs kill -9 2>/dev/null || true) && (pkill -f 'vite.*preview.*4201' 2>/dev/null || true) && (pkill -f 'rspack.*4201' 2>/dev/null || true) && echo '✅ Auth MFE server killed' || echo 'No auth-mfe server running'",
    "kill:payments-mfe": "(lsof -ti :4202 2>/dev/null | xargs kill -9 2>/dev/null || true) && (pkill -f 'vite.*preview.*4202' 2>/dev/null || true) && (pkill -f 'rspack.*4202' 2>/dev/null || true) && echo '✅ Payments MFE server killed' || echo 'No payments-mfe server running'",
    "test": "nx run-many --target=test --projects=shell,auth-mfe,payments-mfe,shared-auth-store,shared-header-ui,shared-ui,shared-utils,shared-types --parallel",
    "test:all": "nx run-many --target=test --all",
    "test:shell": "nx test shell",
    "test:auth-mfe": "nx test auth-mfe",
    "test:payments-mfe": "nx test payments-mfe",
    "test:affected": "nx affected --target=test",
    "test:ui": "nx test shell --ui",
    "test:coverage": "nx run-many --target=test --projects=shell,auth-mfe,payments-mfe,shared-auth-store,shared-header-ui,shared-ui,shared-utils,shared-types --parallel --coverage",
    "test:coverage:shell": "nx test shell --coverage",
    "test:coverage:auth-mfe": "nx test auth-mfe --coverage",
    "test:coverage:payments-mfe": "nx test payments-mfe --coverage",
    "test:shared-auth-store": "nx test shared-auth-store",
    "test:shared-header-ui": "nx test shared-header-ui",
    "test:shared-ui": "nx test shared-ui",
    "test:shared-utils": "nx test shared-utils",
    "test:shared-types": "nx test shared-types",
    "test:libraries": "nx run-many --target=test --projects=shared-auth-store,shared-header-ui,shared-ui,shared-utils,shared-types --parallel",
    "lint": "nx run-many --target=lint --all",
    "lint:shell": "nx lint shell",
    "lint:auth-mfe": "nx lint auth-mfe",
    "lint:affected": "nx affected --target=lint",
    "typecheck": "nx run-many --target=typecheck --all",
    "typecheck:shell": "nx typecheck shell",
    "typecheck:auth-mfe": "nx typecheck auth-mfe",
    "typecheck:payments-mfe": "nx typecheck payments-mfe",
    "typecheck:affected": "nx affected --target=typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "e2e": "pnpm build:remotes && nx e2e shell-e2e",
    "e2e:shell": "pnpm build:remotes && nx e2e shell-e2e",
    "graph": "nx graph",
    "reset": "nx reset",
    "test:rspack:build": "pnpm build:verify",
    "test:rspack:serve": "pnpm dev:mf",
    "test:rspack:remotes": "pnpm build:verify:remotes",
    "test:rspack:hmr": "echo 'Start all servers with: pnpm dev:mf, then make changes to verify HMR'",
    "clean:build": "rm -rf dist && echo '✅ Build output cleaned'",
    "clean:cache": "nx reset && echo '✅ Nx cache cleared'",
    "clean:all": "pnpm clean:build && pnpm clean:cache && echo '✅ All cleaned'",
    "dev:backend": "nx run-many --target=serve --projects=api-gateway,auth-service,payments-service,admin-service,profile-service --parallel",
    "dev:api-gateway": "nx serve api-gateway",
    "dev:auth-service": "nx serve auth-service",
    "dev:payments-service": "nx serve payments-service",
    "dev:admin-service": "nx serve admin-service",
    "dev:profile-service": "nx serve profile-service",
    "build:backend": "nx run-many --target=build --projects=api-gateway,auth-service,payments-service,admin-service,profile-service --parallel",
    "build:api-gateway": "nx build api-gateway",
    "build:auth-service": "nx build auth-service",
    "build:payments-service": "nx build payments-service",
    "build:admin-service": "nx build admin-service",
    "build:profile-service": "nx build profile-service",
    "test:backend": "nx run-many --target=test --projects=api-gateway,auth-service,payments-service,admin-service,profile-service,types,utils,db,event-hub --parallel",
    "test:api-gateway": "nx test api-gateway",
    "test:auth-service": "nx test auth-service",
    "test:payments-service": "nx test payments-service",
    "test:admin-service": "nx test admin-service",
    "test:profile-service": "nx test profile-service",
    "test:backend-libs": "nx run-many --target=test --projects=types,utils,db,event-hub --parallel",
    "lint:backend": "nx run-many --target=lint --projects=api-gateway,auth-service,payments-service,admin-service,profile-service,types,utils,db,event-hub",
    "db:generate": "prisma generate --schema=libs/backend/db/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=libs/backend/db/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=libs/backend/db/prisma/schema.prisma",
    "db:seed": "tsx libs/backend/db/prisma/seed.ts",
    "db:studio": "prisma studio --schema=libs/backend/db/prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema=libs/backend/db/prisma/schema.prisma",
    "db:format": "prisma format --schema=libs/backend/db/prisma/schema.prisma",
    "db:validate": "prisma validate --schema=libs/backend/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@eslint/js": "^9.39.1",
    "@hookform/resolvers": "^3.9.0",
    "@jest/globals": "^30.2.0",
    "@module-federation/enhanced": "0.21.6",
    "@nx/devkit": "22.1.3",
    "@nx/esbuild": "22.1.3",
    "@nx/jest": "22.1.3",
